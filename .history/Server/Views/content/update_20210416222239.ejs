        <div class="row justify-content-lg-center g-3 mt-3 form-background">
          <h1><%= title %> Contact</h1>
          <div id="messageArea"></div>
          <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Full Name </span>
              <input id="firstName" type="text" class="form-control" aria-label="Full Name" aria-describedby="Full Name Input"
              name="FirstName" value="<%= contact.FirstName %>" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Full Name </span>
              <input id="lastName" type="text" class="form-control" aria-label="Full Name" aria-describedby="Full Name Input"
              name="LastName" value="<%= contact.LastName %>" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Contact Number</span>
              <input id="contactNumber" type="tel" class="form-control" aria-label="Contact Number" aria-describedby="Contact Number Input"
              name="ContactNumber" value="<%= contact.ContactNumber %>" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
              <input id="emailAddress" type="email" class="form-control" aria-label="Email Address" aria-describedby="Email Address Input"
              name="EmailAddress" value="<%= contact.EmailAddress %>" required>
            </div>

            <!-- Load Edit Content-->
            <% if(title == "Edit") { %>
            <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %> 
            <!-- Load Add Content-->  
            <button id="addButton" type="submit" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>

            <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
          
            <!-- Load Edit Content-->
            <% if(title == "Edit") { %>
              <td class="text-center"><a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
            <% } %>
          
          </form>
        </div>